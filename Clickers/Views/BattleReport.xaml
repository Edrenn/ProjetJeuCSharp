<UserControl x:Class="Clickers.Views.BattleReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Clickers.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label x:Name="WinOrLoseLabel" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Grid Grid.Row="1" x:Name="ResumeGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="AllyUnitslose" />
            <TextBlock x:Name="AllyUnitsRest" Grid.Row="1" />
            <TextBlock x:Name="EnnemyUnitslose" Grid.Row="2"/>
            <TextBlock x:Name="EnnemyUnitsRest" Grid.Row="3"/>
        </Grid>
        <Button x:Name="ToCastle" Content="ToCastle" Grid.Row="2" Width="50" Height="50" HorizontalAlignment="Left"/>

    </Grid>
</UserControl>
